{
  "name": "cli-console",
  "version": "0.0.1",
  "description": "Proyecto básico de línea de comandos para gestionar tareas utilizando MongoDB como base de datos.",
  "main": "index.js",
  "bin": {
    "cli-tasks": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:cli": "node --loader tsx --env-file=.env src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "pnpm run build"
  },
  "keywords": [],
  "author": "darwintnt",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "commander": "^14.0.2",
    "inquirer": "^13.1.0",
    "mongoose": "^9.1.2"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0"
  }
}
